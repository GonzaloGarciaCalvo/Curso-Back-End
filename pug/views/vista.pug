extends layout/index.pug

block vista
    style.
        td {
            color:black
        }
        

    div
        h1='Vista de Productos'
        br
        if hayProductos
            div(class="table-responsive")
                table(class="table table-primary table-striped align-middle")
                    tr
                        th='Nombre'
                        th='Precio'
                        th='Foto'
                        each prod in productos
                            tr
                                td= prod.nombre
                                td= prod.precio
                                td: img(width="40" src=prod.thumbnail alt="imagen producto")
        else
            h3(class="alert alert-warning")='No se encontraron productos'
        
        a(href="/" type="button" class="btn btn-primary mt-3")='Cargar producto'
